# Convex Configuration (will be auto-populated by npx convex dev)
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud

# Clerk Configuration
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=dev:your-deployment-name

# Bright Data Configuration (for Background Research feature)
# Get these from your Bright Data dashboard: https://brightdata.com/cp/zones
BRIGHT_DATA_API_KEY=your_bright_data_api_key_here
BRIGHT_DATA_COLLECTOR_ID=your_collector_id_here
BRIGHT_DATA_ZONE=static

# Google Gemini API Configuration (for Preference Memory feature)
# Get your API key from: https://aistudio.google.com/app/apikey
# Used for LLM-based preference learning and voice query analysis
GOOGLE_GENERATIVE_AI_API_KEY=your_google_gemini_api_key_here

# Voice Shopper - Pipecat Server Configuration
# Shared secret key for authenticating Pipecat Python server requests to Convex httpActions
# IMPORTANT: Must match PIPECAT_SERVER_SECRET in pipecat/.env
PIPECAT_SERVER_SECRET=your_shared_secret_key_here
